msgid "enum v4l2_iso_sensitivity_type -"
msgstr ""

#: ../../../userspace-api/media/v4l/ext-ctrls-camera.rst:353
msgid "Enables or disables automatic ISO sensitivity adjustments."
msgstr ""

#: ../../../userspace-api/media/v4l/ext-ctrls-camera.rst:361
msgid "``V4L2_CID_ISO_SENSITIVITY_MANUAL``"
msgstr "``V4L2_CID_ISO_SENSITIVITY_MANUAL``"

#: ../../../userspace-api/media/v4l/ext-ctrls-camera.rst:362
msgid "Manual ISO sensitivity."
